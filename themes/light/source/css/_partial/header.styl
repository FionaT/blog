#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  text-align center
  min-width 1000px
  a
    color #fff
    opacity 0.7
    &:hover
      color #fff
      opacity 0.9
      text-shadow: 1px 1px 4px white;
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1


  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px

  #head
    position relative
    left 25%
    width 50%
  h1
    a
      color #fff
      opacity 0.9
      text-shadow: 1px 1px 4px white;
      text-decoration none
  h2
    a
      color #fff
      opacity 0.9
      text-shadow: 1px 1px 4px white;
      text-decoration none

  #main-nav
    position relative
    left 24%
    font-family font-title
    line-height 2.5em
    font-size 2.0em
    width 50%
    ul
      position relative
      left 10%
      list-style none
      li
        float left
        margin-left 20px
        margin-right 20px